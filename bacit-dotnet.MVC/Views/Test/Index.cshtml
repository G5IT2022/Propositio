@using bacit_dotnet.MVC.Entities
@using bacit_dotnet.MVC.Models.Test
@model bacit_dotnet.MVC.Models.Test.TestViewModel;

<h2>En ansatt</h2>
<p>ID: @Model.starEmployee.emp_id</p>
<p>NAVN: @Model.starEmployee.name</p>
<p>ROLLEID: @Model.starEmployee.role.role_id</p>
<p>ROLLENAVN: <@Model.starEmployee.role.role_name</p>
@foreach (TeamEntity team in Model.starEmployee.teams)
{
    <p>TEAMID: @team.team_id</p>
    <p>TEAMNAVN: @team.team_name</p>
}
<h2>Flere Ansatte</h2>
<table>
    <tr>
        <th>Emp_id</th>
        <th>Navn</th>
        <th>Rolle</th>
        <th>Team</th>
        <th>Team</th>
        <th>Team</th>
        <th>Team</th>
        <th>Team</th>
        <th>Team</th>
    </tr>
@foreach (EmployeeEntity employee in Model.employees)
{
    <tr>
        <td>@employee.emp_id</td>
        <td>@employee.name</td>
        <td>@employee.role.role_id @employee.role.role_name</td>
        @foreach(TeamEntity team in employee.teams){
            <td>@team.team_name</td>
        }
    </tr>
}
</table>

<h2>Ett Team</h2>
<p>@Model.starTeam.team_id</p>
<p>@Model.starTeam.team_name</p>
<table>
    <tr>
        <th>ID</th>
        <th>Navn:</th>
        <th>Rollenavn:</th>
    </tr>
    @foreach (EmployeeEntity employee in Model.starTeam.employees)
    {
        <tr>
        <td>@employee.emp_id</td>
        <td>@employee.name</td>
        <td>@employee.role.role_name</td>
        </tr>
    }
</table>

<h2>Flere Team</h2>
@foreach (TeamEntity team in Model.teams)
{
    <hr />
    <p>ID: @team.team_id Navn: @team.team_name</p>
    <table>
        <tr>
            <th>ID</th>
            <th>Navn:</th>
            <th>Rollenavn:</th>
        </tr>
        @foreach (EmployeeEntity employee in team.employees)
        {
            <tr>
                <td>@employee.emp_id</td>
                <td>@employee.name</td>
                <td>@employee.role.role_name</td>
            </tr>
        }
    </table>
    <hr />
}

<h3>Ett Forslag</h3>
<h2>@Model.starSuggestion.title</h2>
<h2>@Model.starSuggestion.author.name</h2>
<h3>@Model.starSuggestion.description</h3>
<h3>@Model.starSuggestion.timestamp.createdTimestamp</h3>
<h3>@Model.starSuggestion.timestamp.dueByTimestamp</h3>