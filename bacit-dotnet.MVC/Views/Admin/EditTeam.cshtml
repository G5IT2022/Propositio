@using bacit_dotnet.MVC.Entities
@using bacit_dotnet.MVC.Models.AdminViewModels
@using bacit_dotnet.MVC.Models
@using Microsoft.AspNetCore;
@using bacit_dotnet.MVC.Models.AdminViewModels.TeamModels;
@model AdminEditTeamModel;
@{
    ViewBag.Title = "Admin | Rediger Team";
}
<body>
    <div class="container editteam-container t-5">
        <div class="row">
            <div class="col">
                <div />
                <div class="col text-center">
                    <h3>Rediger Team</h3>
                </div>
                <div class="col></div>
            </div>
            <div class="row-mt-3">
                <div class="col-sm-4"></div>
                <div class="col-sm-4">
                    <div class="form-group text-center">
                        <input @Html.TextBoxFor(aetm => aetm.team.team_name, new { @class = "form-control" })
                    </div><br />
                </div>
            </div>
            <form asp-action="EditTeam" asp-controller="Admin" method="post">
                <div class="riw text-center mt-4">
                    <div class="col">
                        <b>Ansattnummer</b><div />
                        <div class="col">
                            <b>Navn</b><div />
                            <div class="col"><b>Rolle</b></div>
                            <div /><hr />
                            <div class="row text-center mt-3">

                                @foreach (EmployeeEntity emp in Model.team.employees)
                                {
                                    <div class="row">
                                        <div class="col-sm-3">
                                            @emp.emp_id
                                        </div>
                                        <div class="col-sm-3">
                                            @emp.name
                                        </div>
                                        <div class="col-sm-3">
                                            @emp.role.role_name
                                        </div>
                                    </div>
                                }

                            </div>

                            <div class="row">
                                <div class="col-xs-12 mt-5">
                                    <div class="text-center mt-xxl-5">
                                        <button type="submit" class="btn btn-outline-danger px-4">Avbryt</button>
                                        <button type="submit" class="btn btn-outline-success px-4">Lagre</button>
                                    </div>
                                </div>
                            </div>


            </form>
</body>