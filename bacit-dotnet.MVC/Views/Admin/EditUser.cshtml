<!--View for å redigere ansatt-->

@using bacit_dotnet.MVC.Entities
@using bacit_dotnet.MVC.Models.AdminViewModels
@using bacit_dotnet.MVC.Models
@using Microsoft.AspNetCore;
@using bacit_dotnet.MVC.Models.AdminViewModels.TeamModels;
@model AdminEditUserModel;

@{
    ViewBag.Title = "Admin | Redigere ansatt";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Redigere Ansatt</h4>
        {
        @ViewBag.Created
        }

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.emp_id)

        <!--fornavn-->
        <div class="form-group">
            @Html.LabelFor(model => model.first_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.first_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.first_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--Etternavn-->
        <div class="form-group">
            @Html.LabelFor(model => model.last_name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.last_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.last_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--Passord-->
        <div class="form-group">
            @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--Velg rolle-->
        @Html.LabelFor(model => model.possibleRoles, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="form-group mb-2">
            @Html.EditorFor(model => model.possibleRoles, new {@class="control-label"})
            @*@Html.DropDownListFor(m => m.role_id, Model.possibleRoles, new { @class="form-control"})*@
        </div>

        <!--Admin-->

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tilbake til ansattlisten", "Index")
</div>
