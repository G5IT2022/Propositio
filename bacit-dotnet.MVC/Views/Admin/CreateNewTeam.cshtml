<html>
@using bacit_dotnet.MVC.Models
@using bacit_dotnet.MVC.Entities
@using bacit_dotnet.MVC.Models.AdminViewModels
@model AdminNewTeamModel
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Propositio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bacit_dotnet.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
¨<body>
    <div class="containter newteam-container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-1-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <h2>Nytt Team</h2>
                        <div class="form-outline mb-4">
                            <input type="teamnavn" id="teamnavn" class="form-control form-control-lg" />
                            <label class="form-label" for="teamnavn">Team Navn</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input type="teamdescription" id="teamdescription" class="form-control form-control-lg" />
                            <label class="form-label" for="teamdescription">Teambeskrivelse</label>
                        </div>
                        <button class="btn btn-primary btn-lg btn-block" type="submit">Legg til medlemmer</button>
                    </div>                  

                </div>

            </div>
            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Avbryt</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Lagre</button>
                </li>
            </ul>

        </div>

    </div>

</body>
</html>
