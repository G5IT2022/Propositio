@using Org.BouncyCastle.Asn1.Ocsp
@using bacit_dotnet.MVC.Models
@using bacit_dotnet.MVC.Entities
@using Microsoft.Web.Helpers;
@model bacit_dotnet.MVC.Models.Suggestion.SuggestionRegisterModel
@{
    ViewBag.Title = "Propositio | Nytt Forslag";
}
@if (ViewBag.Message != "")
{
    @ViewBag.Message
}

<form asp-action="Create" asp-controller="suggestion" enctype="multipart/form-data" method="post">
    <!--Tittel-->
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="form-group">
                <label for="title">Tittel</label>
                <input name="title" type="text" class="form-control" id="title" aria-describedby="emailHelp" placeholder="Skriv inn en tittel" value="@Model.title">
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
    <br />
    <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <!--Beskrivelse-->
                <div class="form-group">
                    <label for="description">Beskrivelse av forbedringsforslaget</label>
                    <textarea name="description" class="form-control" id="description" aria-describedby="emailHelp" placeholder="Skriv inn ditt forbedringsforslag" value="@Model.description"></textarea>
                </div>
            </div>
            <br />
            <div class="col-sm-3"></div>
    </div>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <!--Is Just Do It?-->
            <div class="form-check">
                <br />
                @Html.CheckBoxFor(m => m.isJustDoIt, new{@class="form-check-input"})
                @Html.LabelFor(m => m.isJustDoIt, new{@class="form-check-label"})
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <label for="dueByTimestamp">Frist:</label>
            <input type="date" class="form-control" id="dueByTimestamp" name="dueByTimestamp" value=" @Model.dueByTimestamp" />
        </div>
        <div class="col-sm-3"></div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <h5>Velg ansatt</h5>
            @Html.DropDownListFor(m => m.responsibleEmployeeID, Model.possibleResponsibleEmployees, new {@class="form-control"})
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <h5>Velg Kategorier: </h5>
        </div>
        <div class="col-sm-3"></div>
    </div>
    <!--Kategorier-->
    <div class="row">
        @foreach (CategoryEntity category in Model.categories)
        {
            <div class="col-sm-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="@category.category_id" id="flexCheckDefault" name="@category.category_name">
                    <label class="form-check-label" for="flexCheckDefault">
                        @category.category_name
                    </label>
                </div>
            </div>
        }
    </div>
    <br />
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <input type="file" name="file" />
        </div>
        <div class="col-sm-3"></div>
    </div>
    <br />
    <div class="form-group text-center">
            <button class="btn btn-outline-danger">Avbryt</button>
        <span>&nbsp &nbsp &nbsp</span>
            <button type="submit" class="btn btn-outline-success mx-3">Lagre</button>
    </div>
</form>
