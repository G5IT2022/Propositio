@using bacit_dotnet.MVC.Entities
@using bacit_dotnet.MVC.Models;
@model bacit_dotnet.MVC.Models.EmployeeViewModel
<h1>Alle Forslag</h1>

@foreach (EmployeeEntity emp in Model.employees)
{
    @foreach (SuggestionEntity sugg in emp.suggestions)
    {
        <div class="container sugg-container">
            <div class="row sugg-info">
                <div class="col-sm">
                    <p>@emp.name</p>
                </div>
                <div class="col-sm">
                    @foreach (var team in emp.teams)
                    {
                        @(team.team_name += " ")
                        ;
                    }
                </div>
                <div class="col-sm">
                    @sugg.status
                    <div class="suggdiv @sugg.status"></div>
                    @if(sugg.isJustDoIt){
                        <div>
                            DETTE ER JUST DO IT ALTSÅ!
                        </div>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p>@sugg.title</p>
                    <p>@sugg.description</p>
                </div>
            </div>
            <div class="row test">
                <div class="col">
                 @foreach(var category in sugg.categories){
                     @(category.category_name += " ");
                 }
                </div>
            </div>
        </div>
    }
}
